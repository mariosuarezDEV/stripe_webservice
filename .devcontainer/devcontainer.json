{
	"name": "Django Full Stack",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	//"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	//"features": {
	//	"ghcr.io/devcontainers/features/github-cli:1": {}
	//},
	//"build": {
	//	"dockerfile": "Dockerfile",
	// Use 'context' to specify the build context. Defaults to the folder containing this file.
	//	"context": ".."
	// Use 'args' to pass build arguments to the Dockerfile.
	//},
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "app",
	"workspaceFolder": "/app",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install -r dependencias.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"thebarkman.vscode-djaneiro",
				"junstyle.vscode-django-support",
				"bibhasdn.django-html",
				"almahdi.code-django",
				"bigonesystems.django",
				"batisteo.vscode-django",
				"aaron-bond.better-comments",
				"HansUXdev.bootstrap5-snippets"
			]
		}
	}
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}